<div class="container">
	<div class="col-md-6 mx-md-auto">
		<div class="card" style="width: 20rem; text-align: center;">
			<h5 class="card-header p-3"><b>Show Page</b></h5>
		  <div class="card-img-top">	
		  	<% if @post.cover_image? %>
		  		<%= image_tag @post.cover_image.url, class: "w-25" %>
		  	<% end %>
		  </div>
		  <div class="card-body">
		    <div class="card-text">
		    	<p>
					<strong>Post:</strong>
					 <%= @post.title %>
					</p>	 
					<p>
				    	<strong>Description:</strong>
						<%= @post.description %>
					</p>
					<p>
						<strong>Published at:</strong>
						<%= @post.published_at %>
					</p>
					<p>
						<strong>Category.name</strong>
						<%= @post.category.name %>
					</p>
		    </div>
		    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary" %> &nbsp;
				<%= link_to 'Back', posts_path, class: "btn btn-primary" %>
		  </div>
		</div>
	</div>	
</div>
